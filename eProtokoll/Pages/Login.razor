    <h3>Login</h3>
    <center>
        <div class="col-8 card">
            <div class="col-12 row">
                <p>&nbsp;</p>
            </div>

            <div class="col-12 row">

                @if (showErrorMessage)
                {
                    <div class="col-12 alert alert-danger">@errorMessage</div>
                }
                <div class="col-12">
                    <EditForm Model="model" OnValidSubmit="ExecuteLogin">
                        <DataAnnotationsValidator />
                        <ValidationSummary />
                        <div>
                            <br />
                        </div>
                        <div class="col-9 row">
                            <input type="email" @bind-value="model.username" class="form-control col-12 " />
                            <ValidationMessage For="@(()=>model.username)" />
                        </div>
                        <div>
                            <br />
                        </div>
                        <div class="col-9 row">
                            <input type="password" @bind-value="model.password" class="form-control col-12 " />
                            <ValidationMessage For="@(()=>model.password)" />
                        </div>
                    </EditForm>
                </div>
                <br />
                <div class="col-9">
                    <button @onclick="ExecuteLogin" class="btn btn-success ">Log in</button>
                </div>
            </div>

        </div>
    </center>

@code {
    private LoginRequest model = new();
    private bool showErrorMessage = false;
    private string errorMessage = "";

    private async Task ExecuteLogin()
    {
        showErrorMessage = false;

        var result = await _authservice.Login(model);

        if (!result.success)
        {
            showErrorMessage = true;
            errorMessage = result.errorMessage;

        }
        else
        {
            _navmanager.NavigateTo("/dashboard");
        }
    }
}
