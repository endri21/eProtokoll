@inject INotificationService _service;
<RadzenSplitButton Click=@(args => OnClick()) Text="SplitButton" Icon="account_circle">
    <ChildContent>
        @foreach (var i in Notifications)
        {
            <RadzenSplitButtonItem Text="@i.message" Value="@i.id.ToString()" Icon="account_box" />
        }

    </ChildContent>
</RadzenSplitButton>

@code {

    private List<NotificationDto> Notifications = new();
    protected override async Task OnInitializedAsync()
    {
        Notifications = await _service.GetNotifications();
    }

    async Task OnClick()
    {

    }
}
